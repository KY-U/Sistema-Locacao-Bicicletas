<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>ClienteController</servlet-name>
        <servlet-class>br.ufscar.dc.dsw.controller.ClienteController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LocadoraController</servlet-name>
        <servlet-class>br.ufscar.dc.dsw.controller.LocadoraController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LocacaoController</servlet-name>
        <servlet-class>br.ufscar.dc.dsw.controller.LocacaoController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LocaleServlet</servlet-name>
        <servlet-class>br.ufscar.dc.dsw.LocaleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LocaleServlet</servlet-name>
        <url-pattern>/locale</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>Resource Bundle for 'messages'</description>
        <res-ref-name>messages</res-ref-name>
        <res-type>javax.servlet.ServletContext</res-type>
        <res-auth>APPLICATION</res-auth>
    </resource-ref>

</web-app>